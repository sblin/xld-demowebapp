<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.xebialabs.xldeploy.demos</groupId>
        <artifactId>xldeploy-petclinic-parent</artifactId>
        <version>1.0</version>
    </parent>
    <artifactId>PetPortal</artifactId>
    <packaging>dar</packaging>
    <version>1.0</version>
    <name>PetClinic XL Deploy DAR</name>
    <url>http://www.xebialabs.com</url>
    <build>
        <plugins>
            <plugin>
                <groupId>com.xebialabs.xldeploy</groupId>
                <artifactId>xldeploy-maven-plugin</artifactId>
                <version>6.0.0</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>deploy-id</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <applicationName>PetPortal</applicationName>
                    <packageVersion>1.0</packageVersion>
                    <username>admin</username>
                    <password>xladmin</password>
                    <deployables>
                        <jee.War name="petclinic" groupId="com.xebialabs.xldeploy.demos" artifactId="PetClinic">
                            <scanPlaceholders>true</scanPlaceholders>
                        </jee.War>
                        <jee.War name="petclinic-backend" groupId="com.xebialabs.xldeploy.demos" artifactId="PetClinic-Backend"/>
                        <tomcat.DataSourceSpec name="petclinicDataSource">
                            <context>petclinic</context>
                            <jndiName>jdbc/PetPortalDB</jndiName>
                            <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                            <url>{{datasource.url}}</url>
                            <username>{{datasource.username}}</username>
                            <password>{{datasource.password}}</password>
                        </tomcat.DataSourceSpec>
                        <sql.SqlScripts name="sql" location="sql"/>
                        <smoketest.HttpRequestTest name="smokeTest">
                            <url>{{smoke.test.url}}</url>
                            <expectedResponseText>{{smoke.test.expectedResponse}}</expectedResponseText>
                        </smoketest.HttpRequestTest>
                    </deployables>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.xebialabs.xldeploy.demos</groupId>
            <artifactId>PetClinic</artifactId>
            <version>1.0</version>
            <type>war</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.xebialabs.xldeploy.demos</groupId>
            <artifactId>PetClinic-Backend</artifactId>
            <version>1.2</version>
            <type>war</type>
            <scope>provided</scope>
        </dependency>
    </dependencies>

</project>

